		<link rel="stylesheet" href="{{ asset('css/app.css') }}">
	{% endblock %}
</head>

<body>

	{{ include('layouts/partials/nav.html.twig') }}

	<main role="main" class="container">
		{% block body %}{% endblock %}
		</main>

		{{ include('layouts/partials/footer.html.twig') }}

		{% block javascripts %}
			<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>

			{# Script pour le countdown #}
			<script
			src="https://code.jquery.com/jquery-3.5.1.min.js"
			integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
			crossorigin="anonymous"></script>
			
			<script type="text/javascript">
			jQuery(function($){ /*télécharger jquery*/

				var launch = new Date(2021, 03, 25, 08, 00, 00); /*Année 2011, mois décembre = 12 et janvier = 00, jours, heurs, minutes, secondes*/

				var days = $('#days');
				var hours = $('#hours');
				var minutes = $('#minutes');
				var seconds = $('#seconds');

				setDate();
				function setDate(){
					var now = new Date(); /*ça prend automatiquement la date du jour en fonction de mon pc*/
					var s = -now.getTimezoneOffset()*60 + (launch.getTime() - now.getTime())/1000;
					var d = Math.floor(s/86400);
					days.html('<strong>'+d+'</br></strong>Day'+(d>1?'s':'')); /*fonction ternaire, si il y a plys de 1 jour, on met un s */
					s -= d*86400;

					var h = Math.floor(s/3600);
					hours.html('<strong>'+h+'</br></strong>Hour'+(h>1?'s':''));
					s -= h*3600;

					var m = Math.floor(s/60);
					minutes.html('<strong>'+m+'</br></strong>Minute'+(m>1?'s':''));

					s = Math.floor(s-m*60);
					seconds.html('<strong>'+s+'</br></strong>Second'+(s>1?'s':''));

					setTimeout(setDate, 1000); /*la fonction setDate sexecute toutes les secondes*/
				}
			});
			</script>


		{% endblock %}

	</body>

	</html>
